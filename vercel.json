{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/posts/.*", "dest": "backend/index.js" },
    { "src": "/api/users/.*", "dest": "backend/index.js" },
    { "src": "/(.*)", "dest": "frontend/build/index.html" }
  ]
}
