{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { "src": "/api/posts/.*", "dest": "/backend/server.js" },
    { "src": "/api/users/.*", "dest": "/backend/server.js" },
    { "src": "/(.*)", "dest": "/frontend/build/index.html" }
  ]
}
